    <h1>{{ article.title }}</h1>
    <h2>{{ article.category.name }}</h2>

    <p>{{ article.content }}</p>

    <strong>Tags :</strong>
    <ul>
        {% for tag in article.tags %}
            <a href="{{ path('app_tag', {'tagName': tag.name}) }}"> <li>{{ tag.name }} </li></a>
